{
    "source": {
      "include": ["src"],
      "includePattern": "\\.(jsx|js|ts|tsx)$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
      "plugins/markdown"
    ],
    "tags": {
      "allowUnknownTags": true,
      "dictionaries": ["jsdoc", "closure"]
    },
    "opts": {
      "destination": "docs",
      "recurse": true,
      "readme": "README.md",
      "template": "node_modules/clean-jsdoc-theme"
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false,
      "default": {
        "outputSourceFiles": true,
        "includeDate": false
      },
      "clean-jsdoc-theme": {
        "homepageTitle": "Civil Rights Project Documentation",
        "theme": "light",
        "menu": [
          {
            "title": "GitHub",
            "link": "https://github.com/yourusername/civil-rights",
            "target": "_blank"
          }
        ],
        "meta": [
          {
            "name": "author",
            "content": "Your Name"
          },
          {
            "name": "description",
            "content": "Documentation for Civil Rights Project"
          }
        ],
        "sections": ["Classes", "Modules", "Components", "Pages", "Global", "Tutorials"]
      }
    }
  }